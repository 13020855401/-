/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0;
} 
.placeholder{
  color: #C7C7CD;
}
.index_bg{
  height: 100vh;
  width: 100%;
  overflow: hidden;
}
.box{
  position: absolute;
  top: 30vh;
  width: 90%;
  left: 5%;
  background: #fff;
  box-shadow: 10px 8px 8px rgba(10,16,20,.24),10px 10px 8px rgba(10,16,20,.12);
  padding: 20px;
  border-radius: 5px;
  box-sizing:border-box;  
-moz-box-sizing:border-box; /* Firefox */  
-webkit-box-sizing:border-box; /* Safari */  
}
.question{
  display: block;
  width: 100%;
  line-height: 40px;
  text-align: center;
}
.radio{
  width: 100%;
  display: block;
  height: 40px;
  border-radius: 20px;
  border: 1px solid #FF9900;
  text-align: center;
  margin-top: 20px;
  line-height: 40px;
  color: #FF9900;
}
.radio:last-child{
  margin-bottom: 20px;
}
.active{
  color: #fff;
  background: #FF9900;
}
radio{
  display: none;
}
.aboutUs{
  position: absolute;
  width: 120px;
  height: 40px;
  bottom: 15px;
  left: 50%;
  margin-left: -60px;
}
.aboutUs image{
  width: 100%;
  height: 100%;
}
.contact{
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background-color: #fff;
  padding: 0;
  position: absolute;
  bottom: 20px;
  right: 20px;
}
.contact image{
  width: 100%;
  height: 100%;
}
.days{
  width: 50px;
  height: 30px;
  border: 1px solid #333;
}
.option{
  text-align: center;
}
.option .line text,.option input{
 display: inline-block; 
}